<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ThankyouFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/thankyou_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:text="Your order has been posted"
        android:textAlignment="center"
        android:textColor="#0A0A0A"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/thankyou_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/thankyouforyourorder" />

    <Button
        android:id="@+id/thankyou_continue_shopping_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Continue Shopping" />

</LinearLayout>